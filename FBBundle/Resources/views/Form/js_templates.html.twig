<script type="text/x-jquery-tmpl" id="text_input_template">
    <div class="input_element" type="text">
	<div class="action_items pull-right hide">
	    <i class="icon-remove remove_item"></i>
	</div>
	<div class="control_wrapper">
	    <div class="control-group">
	      <label class="control-label" for="${id}" id="${label.id}">Text input</label>
	      <div class="controls">
		<input type="text" class="input-xlarge" id="${id}">
	      </div>
	    </div>
	</div>
    </div>
</script>

