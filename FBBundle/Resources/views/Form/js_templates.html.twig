{% autoescape %}
<script type="text/x-jquery-tmpl" id="form_base">
    <div class="container-fluid">
	<div class="row-fluid">
	    <div class="span4" id="left_panel">
		Left Side Bar container
	    </div>
	    <div class="span8" id="form_panel" style="background:white">
		<form class="form-vertical">
		    <div class="row-fluid">
			<h2 id="form_title">Untitled Form</h2>
		    </div>
		    <div class="row-fluid" style="font-size:12px;" id="form_description">
			This is my form, please fill it out. Its awesome.
		    </div>
		</form>
	    </div>
	</div>
    </div>
</script>

<script type="text/x-jquery-tmpl" id="left_panel_template">
    <div class="tabbable">
	<ul class="nav nav-tabs" id="selection_tabs">
	    <li class="active">
		<a href="#tab1" data-toggle="tab">Add a Field</a>
	    </li>
	    <li>
		<a href="#tab2" data-toggle="tab">Form Settings</a>
	    </li>
	    <li>
		<a href="#tab3" id="field_setting_tab" data-toggle="tab">Field Settings</a>
	    </li>
	</ul>
	<div class="tab-content">
	    <div class="tab-pane fade-in active" id="tab1">
		<div class="row-fluid">
		    <a class="btn btn-warning input_item" type="text" style="width:100px;">Single Line Text</a>
		</div>
		<div class="row-fluid" style="margin-top:20px;">
		    <a class="btn btn-warning input_item" type="textarea" style="width:100px;">Paragraph Text</a>
		</div>
		<div class="row-fluid" style="margin-top:20px;">
		    <a class="btn btn-warning input_item" type="checkbox" style="width:100px;">Multiple Choice</a>
		</div>
		<div class="row-fluid" style="margin-top:20px;">
		    <a class="btn btn-warning input_item" type="select" style="width:100px;">Selection</a>
		</div>
		<div class="row-fluid" style="margin-top:20px;">
		    <a class="btn btn-warning input_item" type="number" style="width:100px;">Number</a>
		</div>
	    </div>
	    <div class="tab-pane fade" id="tab2">
		<div class="form-vertical">
		    <div class="control-group">
		      <label class="control-label" for="form_label_type">Label Position</label>
		      <div class="controls">
			    <label class="radio">
				<input type="radio" name="label_align" id="label_left_align" value="left" checked="checked" class="label_align_change" />
				Left
			    </label>
			    <label class="radio">
				<input type="radio" name="label_align" id="label_top_align" value="top" class="label_align_change"/>
				Top
			    </label>
		      </div>
		    </div>
		    <div class="control-group">
			<label class="control-label" for="form_title">Form Title</label>
			<div class="controls">
			    <input type="text" class="input-xlarge" id="form_title_text"/>
			</div>
		    </div>
		    <div class="control-group">
			<label class="control-label" for="form_description">Form Description</label>
			<div class="controls">
			    <textarea type="text" class="input-xlarge" id="form_description_text"></textarea>
			</div>
		    </div>
		</div>
	    </div>
	    <div class="tab-pane fade" id="tab3">
		There are no Fields in you Form, Add One to view Settings
	    </div>
	</div>
    </div>
</script>

