{% include 'FormBuilderFBBundle:General:head.html.twig' %}
    
    <div id="maindiv">
	<div class="well form-horizontal" id="login_form">
	    <fieldset>
	    <h1 class="headline blue">Sign Up</h1>
	    <div id="login_error_msg" class="alert alert-error" style="display: none; text-align: center;">
	    </div>
	    <div class="control-group">
		<label class="control-label">Name</label>
		<div class="controls">
		    <input type="text" class="input-xlarge name" placeholder="Name" name="name">
		</div>
	    </div>
	    <div class="control-group">
		<label class="control-label">Email</label>
		<div class="controls">
		    <input type="text" class="input-xlarge email" placeholder="Email" name="email">
		</div>
	    </div>
	    <div class="control-group">
		<label class="control-label">Password</label>
		<div class="controls">
		    <input type="password" class="input-xlarge password" placeholder="Password" name="password">
		</div>
	    </div>
	    <div class="control-group">
		<label class="control-label">Confirm Password</label>
		<div class="controls">
		    <input type="password" class="confirm_password input-xlarge" placeholder="Confirm Password" name="confirm_password" onkeypress="window.detect_key(event, 2);">
		</div>
	    </div>
	    <div class="form-actions" style="margin-top: 0px; margin-bottom: 0px;"> 
		<div style="padding-top: 10px;"> 
		    <button type="submit" class="btn btn-primary" href="javascript:void(0);" onclick="window.register_new_user();">SignUp</button>
		</div>
	    </div>
	    </fieldset>
	</div>	
    </div>

{% include 'FormBuilderFBBundle:General:footer.html.twig' %}
